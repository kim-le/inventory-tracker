<%- title "Warehouses" %>
<div class="card border-light">
  <div class="table-responsive">
    <table class="table align-middle mb-0  table-borderless">
      <thead class="table-light text-secondary">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Street Address</th>
          <th scope="col">Country</th>
          <th scope="col">City</th>
          <th scope="col">State / Province</th>
          <th scope="col">ZIP / Postal Code</th>
          <th scope="col">No. Products</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody class="border-light">
        <% @warehouses.each do |warehouse| %>
          <tr>
            <td><%= warehouse.id %></td>
            <td><%= link_to warehouse.name, warehouse %></td>
            <td><%= warehouse.address_1 %>
              <% warehouse.address_2.present? do %>
                <%= warehouse.address_2 %>
              <% end %>
            </td>
            <td><%= warehouse.country %></td>
            <td><%= warehouse.city %></td>
            <td><%= warehouse.state_province %></td>
            <td><%= warehouse.zip_postal %></td>
            <td><span class="badge bg-primary rounded-pill"> <%= warehouse.products.count %></span></td>
            <td><%= link_to render(Primer::OcticonComponent.new(:"pencil")), edit_warehouse_path(warehouse) %> <%= link_to render(Primer::OcticonComponent.new(:"x")), warehouse_path(warehouse), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this item?"
                } %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
